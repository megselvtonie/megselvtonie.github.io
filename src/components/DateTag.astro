---
const { datetime } = Astro.props;
const d = new Date(datetime);

// Nåtid
const now = new Date();
const diffMs = now.getTime() - d.getTime();
const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
const diffMonths = (now.getFullYear() - d.getFullYear()) * 12 + (now.getMonth() - d.getMonth());
const diffYears = now.getFullYear() - d.getFullYear();

let label = "";

// Formater klokkeslett
const timeStr = d.toLocaleTimeString("no-NO", {
  hour: "2-digit",
  minute: "2-digit",
});

// Ulike tilfeller
if (diffDays === 0) {
  label = `i dag kl. ${timeStr}`;
} else if (diffDays === 1) {
  label = `i går kl. ${timeStr}`;
} else if (diffDays === 2) {
  label = "i forgårs";
} else if (diffDays === 3) {
  label = "for 72 timer siden";
} else if (diffDays >= 4 && diffDays <= 6) {
  const weekday = d.toLocaleDateString("no-NO", { weekday: "long" });
  label = `på ${weekday}`;
} else if (diffDays === 7) {
  label = "for 1 uke siden";
} else if (diffDays === 14) {
  label = "14 dager siden";
} else if (diffDays < 14) {
  label = `for ${diffDays} dager siden`;
} else if (diffMonths === 1) {
  label = "for 1 måned siden";
} else if (diffMonths === 6) {
  label = "for 6 måneder siden";
} else if (diffYears === 1) {
  label = "i fjor";
} else if (diffYears >= 2) {
  label = "så lenge siden at jeg ikke husker";
} else {
  // Standard fallback: vis full dato
  const dateStr = d.toLocaleDateString("no-NO", {
    weekday: "long",
    day: "numeric",
    month: "long",
    year: "numeric",
  });
  label = `${dateStr} kl. ${timeStr}`;
}
---

<span class="date-tag">{label}</span>

<style>
  .date-tag {
    display: inline-block;
    color: #333;
    font-size: 0.65rem;
    font-weight: 500;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: system-ui, sans-serif;
  }
</style>
