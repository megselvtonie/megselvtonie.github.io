---
import ActiveLink from './ActiveLink.astro';
---

<nav id="menu">
  <ul id="menu-list" class="nav-links">
    <li>
      <ActiveLink href="/about" text="Om meg" />
      <span class="separator">|</span>
    </li>
    <li>
      <ActiveLink href="/nettsiden" text="Hvorfor har jeg kodet en nettside?" />
      <span class="separator">|</span>
    </li>
    <li>
      <ActiveLink href="/wip" text="VVIP" />
      <span class="separator">|</span>
    </li>
    <li>
      <ActiveLink href="/spilloteket" text="Spilloteket" />
    </li>
    <span class="separator">|</span>
     <li>
      <ActiveLink href="/kokebok" text="Kokeboka mi"/>
    </li>
  </ul>
</nav>

<style>
  /* Fjern punktmerking bare for menyen */
  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1rem;
  }

  .separator {
    margin: 0 0.25rem;
  }

  /* Mobil */
  @media (max-width: 768px) {
    .nav-links {
      display: none; /* skjules som default */
      flex-direction: column;
      gap: 0.5rem;
    }
    .nav-links.expanded {
      display: flex; /* vises når hamburger toggler */
    }
    .separator {
      display: none; /* skjul separator på mobil */
    }
  }

  /* Desktop */
  @media (min-width: 769px) {
    .nav-links {
      display: flex; /* alltid synlig */
      flex-direction: row;
      gap: 0.2rem;
    }
  }
</style>
