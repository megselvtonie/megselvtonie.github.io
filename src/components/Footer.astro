---
import Social from '../components/Social.astro';
---

<footer class="footer">
  <div class="left">Dette er footeren min:
    <span class="item">megselvtonie © 2025<br/>
   
    </span></div>

  <nav class="right">
    
    <Social platform="letterboxd" username="megselvtonie" compact class="item" />
    <Social platform="instagram"  username="megselvtonie" compact class="item" />
    <Social platform="github"     username="megselvtonie" compact class="item" />
    <p>toniefiskvik [at] gmail [dot] com</p>
    <a href="#top" class="item back-to-top">↑ Til toppen</a>
  </nav>

  <style>
    .footer {
      bottom: 0;
      left: 0;
      width: 100%;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 0.7rem;
      color: #000;
      padding: 6px 0;
      border-top: 0.5rem solid #000;

      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
      /* Viktig: ikke la desktop “wrappe” før breakpoint */
      white-space: nowrap;
    }

    .left { text-align: left; }

    .right {
      display: flex;
      align-items: center;
      gap: .75rem;
      flex-wrap: nowrap;   /* ← tving én linje på desktop */
    }

    .item { display: inline-block; }

    .footer a {
      color: #000;
      text-decoration: none;
    }
    .footer a:hover { text-decoration: underline; }

    /* MOBIL: bytt helt til stående layout */
    @media (max-width: 600px) {
      .footer {
        flex-direction: column;
        align-items: flex-start;
        white-space: normal;   /* tillat linjebrudd i kolonne */
      }

      .right {
        flex-direction: column;   /* ett element per linje */
        align-items: flex-start;  /* venstrestilt */
        gap: .25rem;
        width: 100%;
      }

      /* Flytt "Til toppen" øverst i den høyre kolonnen */
      .back-to-top {
        order: -1;
        margin-bottom: .25rem;
      }
    }
  </style>
</footer>
