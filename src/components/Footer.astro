---
import Social from '../components/Social.astro';
---

<footer>
<p>megselvtonie © 2025</p>

<style>
  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
   /* background: #fff5d1; /* lys grå, typisk gammelt web-utseende */
    border-top: 1px solid #ffe792cf;
    text-align: center;
    font-family: Arial, sans-serif;
    font-size: 10px;
    color: #000;
    padding: 2px 0;
  }

  footer a {
    color: #000080; /* klassisk blå lenkefarge */
    text-decoration: underline;
  }

  footer a:hover {
    color: #000;
    background: #e0e0e0;
  }

  .back-to-top {
    position: fixed;
    bottom: 15px;
    right: 15px;
    padding: 4px 8px;
    font-size: 12px;
    font-family: Arial, sans-serif;
    color: #000080; /* klassisk "link-blå" */
    text-decoration: underline;
    background: #f5f5f5;
    border: 1px solid #ccc;
  }

  .back-to-top:hover {
    background: #e0e0e0;
    color: #000;
  }
</style>

<a href="#" class="back-to-top">Ta meg til toppen av siden</a>

