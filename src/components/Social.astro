---
/**
 * Dette er en komponent (const) og tar imot props fra forelderen
 * Props = data du sender inn n√•r du bruker komponenten i footer.astr.
 * 
 * Da blir:
 *   platform = "letterboxd"
 *   username = "megselvtonie"
 * som sendes inn fra footer.astro
 */
const { platform, username, compact = false, class: className = "" } = Astro.props;

// Declare href before using it
let href;

if (platform === "spotify") {
  href = `https://open.spotify.com/user/t%C3%A5nje?si=15eb54d38c1c4445`;
} else {
  href = `https://www.${platform}.com/${username}`;
}

---
<a class={`${compact ? "compact" : ""} ${className}`} href={href}>
  {platform}
</a>


<style>
  a { padding: 0.5rem 1rem; text-decoration: none; }
  a.compact { padding: 0; } /* kompakt variant for footer */
</style>
