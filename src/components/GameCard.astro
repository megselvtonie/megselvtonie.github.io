---
/**
 * Props:
 * - title: string
 * - date: string
 * - length: string (optional)
 * - topics: string (optional)
 * - description: string (optional)
 * - image: string (path til bildet)
 * - featured: boolean (om kortet skal dekke to kolonner)
 */
const { title, date, length, topics, description, image, featured } = Astro.props;
---

<article class:list={["game-card", featured && "featured"]}>
  <div class="image-wrapper">
    <img src={image} alt={title} loading="lazy" />
  </div>

  <div class="meta">
    <p><strong class="label">Spill</strong> {title}</p>
    <p><strong class="label">Dato</strong> {date}</p>
    {length && <p><strong class="label">Lengde</strong> {length}</p>}
    {topics && (
      <p><strong class="label">Tag</strong> {topics}</p>
    )}
    {description && (
      <>
        <p><strong class="label">Beskrivelse</strong></p>
        <p>{description}</p>
      </>
    )}
  </div>
</article>

<style>
/* ------------------------------
   GRUNNLEGGENDE STIL
------------------------------ */
.game-card {
  display: flex;
  flex-direction: column;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 2rem;
}

/* ------------------------------
   BILDE
------------------------------ */
.image-wrapper {
  aspect-ratio: 16 / 9;
  overflow: hidden;
}

.image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ------------------------------
   METADATA (tekstfeltet)
------------------------------ */
.meta {
  padding: 0.5rem 0;
  font-size: 40px
  line-height: 1rem;
}

/* ðŸ”¸ Her kan du justere avstanden mellom linjene i metadataene */
.meta p {
  margin: 0 0; /* <-- Ã˜k for mer luft mellom linjene */
  font-size: 18px;
  font-family: 'Courier New', Courier, monospace;
}

/* ðŸ”¸ Denne fargen styrer â€œTitleâ€, â€œDateâ€, osv. */
.label {
  color: #d84315;
  font-family: var(--font-serif, "Times New Roman", serif);
  font-family: Arial, Helvetica, sans-serif;
  display: inline-block;
  min-width: 6ch; /* ðŸ”¸ Juster bredden for hvor langt labelen skal strekke seg */
}

/* ------------------------------
   FEATURED-KORT (dekker to kolonner)
------------------------------ */
.featured {
  grid-column: span 2;
}
</style>