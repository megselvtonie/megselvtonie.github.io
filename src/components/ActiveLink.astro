---
/* ActiveLink.astro – viser hvilken side som er aktiv */
const { href, text } = Astro.props;
const { pathname } = Astro.url;

// Sjekker om path matcher, fanger både "/about" og "/about/"
const isActive = pathname === href || pathname.startsWith(href);
---

<a href={href} class={isActive ? "nav-active" : ""}>{text}</a>

<style>
  .nav-active {
    font-weight: bold;       /* gjør den litt tydeligere */
    color: #d11305;          /* bruk accentfargen din */
  }
</style>
