---
import BaseLayout from "../layouts/BaseLayout.astro";
import DateTag from "../components/DateTag.astro";
import GameCard from "../components/GameCard.astro";
import { getCollection, type CollectionEntry } from "astro:content";


type Game = CollectionEntry<"games">;
const games: Game[] = await getCollection("games");
export const breadcrumb = "Spilloteket";

const pageTitle = "Spilloteket → mitt";
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Spilloteket med det rare i <DateTag datetime="2025-09-26T14:06" /></h1>
  <p class="subhead">Under utvikling ass </p>

  <section class="grid">
    {games.map((game) => <GameCard game={game} />)}
  </section>
</BaseLayout>

<style>
.grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: 1fr; /* alltid én kolonne */
  margin-top: 1.5rem;
}

/* Desktop: én kolonne */
@media (min-width: 1024px) {
  .grid {
    grid-template-columns: 1fr;
  }
}
</style>
