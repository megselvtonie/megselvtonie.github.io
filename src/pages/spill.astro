---
import BaseLayout from "../layouts/BaseLayout.astro";
import GameCard from "../components/GameCard.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import DateTag from "../components/DateTag.astro";

type Game = CollectionEntry<"games">;
const games: Game[] = await getCollection("games");
export const breadcrumb = "Spilloteket";
---

<BaseLayout pageTitle="Kortspill">
  <h1>Kortspill <DateTag datetime="2025-09-26T14:06" /></h1>
  <h2>Under utvikling </h2>
  <p class="ingress">Bla deg nedover og oppdag nye kortspill – finn inspirasjon før du velger hva du vil lære deg.</p>
  <h3>Jeg tester noen funksjoner her</h4>
  <p> Sliter som faen med å justere skriftstørrelsene på tekstene "#$%"$%&</p>

  <section class="grid">
    {games.map((game) => <GameCard game={game} />)}
  </section>
</BaseLayout>

<style>
.grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: 1fr; /* alltid én kolonne */
  margin-top: 1.5rem;
}

/* Desktop: én kolonne */
@media (min-width: 1024px) {
  .grid {
    grid-template-columns: 1fr;
  }
}
</style>
